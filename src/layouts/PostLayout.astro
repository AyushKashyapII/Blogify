---
import "../styles/global.css";
const { title, description, publishDate } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
    </head>
    <body>
        <main style="max-width: 48rem; margin: 0 auto; padding: 2rem 1rem;">
            <header style="margin-bottom: 2.5rem;">
                <h1
                    style="font-size:2.2rem; font-weight:700; margin-bottom:0.5rem;"
                >
                    {title}
                </h1>
                {
                    description && (
                        <p style="color:#aaa; font-size:1.1rem; margin-bottom:0.5rem;">
                            {description}
                        </p>
                    )
                }
                {
                    publishDate && (
                        <time style="color:#888; font-size:0.95rem;">
                            {publishDate}
                        </time>
                    )
                }
            </header>
            <article>
                <slot />
            </article>
        </main>
    </body>
</html>
