<style>
    .footer-container {
        width: 100%;
        margin-top: 4rem;
        padding: 2.5rem 0 1.5rem 0;
        background: var(--bg);
        color: var(--text);
    }
    .footer-content {
        max-width: 80ch;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .footer-heading {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .footer-desc {
        font-size: 1.1rem;
        color: var(--text);
        margin-bottom: 0.5rem;
    }
    .footer-socials {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .footer-socials a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: var(--text);
        border-radius: 6px;
        transition:
            background 0.2s,
            box-shadow 0.2s,
            color 0.2s;
        padding: 2px;
    }
    .footer-socials a:hover {
        background: var(--hover-bg);
        box-shadow: var(--hover-shadow);
        color: var(--link);
    }
    .footer-email {
        font-size: 1.1rem;
        color: var(--text);
        margin-bottom: 0.5rem;
    }
    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1rem;
        margin-top: 1.5rem;
    }
    .footer-top-btn {
        background: none;
        border: 1px solid var(--text);
        color: var(--text);
        border-radius: 6px;
        padding: 0.5rem 1rem;
        cursor: pointer;
        font-size: 1rem;
        transition:
            background 0.2s,
            color 0.2s;
    }
    .footer-top-btn:hover {
        background: var(--hover-bg);
        color: var(--link);
    }
</style>
