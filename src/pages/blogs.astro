---
import Header from "../components/Header.astro";
title: "Ayush Kashyap";
import "../styles/global.css";
---

<section class="mt-32 max-w-3xl mx-auto px-6 text-gray-300">
  <Header />

  <div class="under-construction-icon" style="margin-top:2.5rem;">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="38"
      height="38"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><rect x="2" y="6" width="20" height="8" rx="1"></rect><path d="M17 14v7"
      ></path><path d="M7 14v7"></path><path d="M17 3v3"></path><path d="M7 3v3"
      ></path><path d="M10 14 2.3 6.3"></path><path d="m14 6 7.7 7.7"
      ></path><path d="m8 6 8 8"></path></svg
    >
  </div>
  <div class="under-construction-text">
    <h1
      style="font-size:1.5rem;font-weight:700;margin-bottom:0.5rem;color:#ddc484;"
    >
      This page is under construction
    </h1>
    <p style="color:#888;font-size:1.1rem;">
      I am currently building it, so check back soon!
    </p>
  </div>
</section>
