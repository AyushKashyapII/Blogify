		<style>
			.project-list {
				display: flex;
				flex-direction: column;
				gap: 2rem;
				margin-top: 2rem;
			}
			.project-card {
				position: relative;
				background: var(--bg);
				border: 1px solid var(--hover-bg);
				border-radius: 12px;
				padding: 1.5rem 1.2rem 1rem 1.2rem;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
				transition: box-shadow 0.2s;
				min-height: 90px;
				overflow: hidden;
			}
			.project-main {
				display: flex;
				align-items: center;
				justify-content: space-between;
			}
			.project-title-group {
				display: flex;
				align-items: center;
			}
			.project-title {
				font-size: 1.2rem;
				font-weight: 700;
				margin-bottom: 0.3rem;
				display: flex;
				align-items: center;
			}
			.project-actions {
				display: flex;
				align-items: center;
				gap: 1rem;
			}
			.github-btn {
				background: none;
				border: none;
				padding: 0.2rem;
				border-radius: 5px;
				color: var(--link);
				transition: background 0.2s;
				display: flex;
				align-items: center;
			}
			.github-btn:hover {
				background: var(--hover-bg);
			}
			.project-toggle {
				background: none;
				border: none;
				color: var(--text);
				font-weight: 600;
				cursor: pointer;
				padding: 0.1rem 0.3rem;
				font-size: 1.2rem;
				border-radius: 4px;
				transition:
					color 0.2s,
					background 0.2s;
				z-index: 2;
				display: flex;
				align-items: center;
			}
			.project-toggle:hover {
				background: var(--hover-bg);
				color: #2563eb;
			}
			.arrow-down-svg {
				display: inline-block;
				transition:
					transform 0.3s,
					opacity 0.2s;
			}
			.arrow-up-svg {
				display: none;
				transition:
					transform 0.3s,
					opacity 0.2s;
			}
			.project-toggle.open .arrow-down-svg {
				display: none;
			}
			.project-toggle.open .arrow-up-svg {
				display: inline-block;
			}
			.project-tagline {
				font-size: 1rem;
				margin-bottom: 0.2rem;
				color: var(--text);
			}
			.project-details {
				max-height: 0;
				overflow: hidden;
				transition:
					max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1),
					padding 0.3s;
				padding: 0 0.2rem;
				margin-top: 0.5rem;
			}
			.project-card.expanded .project-details {
				max-height: 300px;
				padding: 0.7rem 0.2rem 0.2rem 0.2rem;
			}
			.project-details ul {
				margin: 0.5rem 0 0 1.2rem;
				padding: 0;
				color: var(--text);
				font-size: 0.98rem;
			}
			.blog-link {
				display: inline-block;
				margin-top: 0.7rem;
				color: #888 !important;
				text-decoration: none !important;
				font-weight: 600;
				font-size: 1rem;
				transition:
					color 0.2s,
					background 0.2s;
				border-radius: 4px;
				padding: 2px 6px;
			}
			.blog-link:hover {
				color: #4094e7 !important;
				text-decoration: none !important;
				background: rgba(64, 148, 231, 0.08);
			}
			.project-bullets {
				margin: 0.5rem 0 0 1.2rem;
				padding: 0;
				color: var(--text);
				font-size: 0.98rem;
			}
			.project-bullets li {
				margin-bottom: 0.2rem;
				list-style-type: disc;
			}
		</style>
	</body>
</html>
